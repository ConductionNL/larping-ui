<section class="bg-white py-md-2 border mb-10">
    <div class="container h-100">
        <div class="search-result-bar mb-0">

        </div>

        {% for product in products['hydra:member'] %}

            <div style="border-top: 1px solid #e5e5e5;" class="card card-list mt-4 border-bottom-0">
                <div class="row">
                    <div class="col-md-3">
                        <img style="border-radius: 4px" src="https://picsum.photos/200/150" width="100%" height="100%"
                             alt="things-4">
                    </div>
                    <div class="col-md-9 my-auto">
                        <div class="row py-auto">
                            <div class="col-md-6 py-auto">
                                <div class="d-flex justify-content-between align-items-center mb-1 mt-1 ">
                                    <h4 class="card-title mb-0">{{ product.name }}</h4>
                                </div>
                                <span class="d-block mb-2">{{ product.type|capitalize }} </span>
                                <p>{{ product.description }}</p>
                            </div>
                            <div class="col-md-2 d-flex justify-content-center">
                                <p class="my-auto">18 Feb 2021</p>

                            </div>
                            <div class="col-md-2 d-flex justify-content-center">
                                <p class="my-auto font-weight-bold color-black">Amsterdam</p>

                            </div>
                            <div class="col-md-2 d-flex justify-content-center">
                                <a class="my-auto drop-hover mh-50" role="button" data-toggle="collapse" href="#{{ product.sku }}"
                                   aria-expanded="false"
                                   aria-controls="event1">
                                    <p class="color-black"><i style="font-size: 56px; padding-top: 0"
                                                              class="fa">&#xf107;</i></p>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="{{ product.sku }}" style="border-top: 1px solid #f5f5f5;" class="collapse show card card-list ">

                {% for offer in product.offers %}

                <div class="row my-5">
                    <div class="col-md-3">
                        <input style="height: 35px !important;" class="form-control" type="checkbox" value="{{ offer.id }}">
                    </div>
                    <div class="col-md-9 my-auto">
                        <div class="row ">
                            <div class="col-md-6 ">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h4 class="mb-0">{{ offer.name }}</h4>
                                </div>
                            </div>
                            <div class="col-md-2">

                            </div>
                            <div class="col-md-2 d-flex justify-content-center">
                                <p class="my-auto font-weight-bold color-black">€ {{ offer.price/100|number_format(2, '.')  }},-</p>
                            </div>
                            <div class="col-md-2">

                            </div>
                        </div>
                    </div>
                </div>

                {% endfor %}

                <div style="height: 100px" class="row my-5">
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-9 my-auto">
                        <div class="row ">
                            <div class="col-md-6 ">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h4 class="mb-0"></h4>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <p class="my-auto pt-4 font-weight-bold color-black float-right">Totaal:</p>
                            </div>
                            <div class="col-md-2 d-flex justify-content-center border-top">
                                <p class="my-auto pt-4 font-weight-bold color-black">?</p>

                            </div>
                            <div class="col-md-2 d-flex justify-content-center">
                                <a class="my-auto mh-50 pt-4 add-button" href="#"><i style="font-size: 36px;border-radius: 4px" class="color-limegreen fa fa-plus-square-o"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</section>

