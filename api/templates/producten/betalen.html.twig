{% extends 'body.html.twig' %}

    {% block content %}

        <div class="wrapper">

            <div class="container" style="height: 100%">

                <h2 style="width: 100% !important;" class="d-block m-5"><a class="custom-breadcrumb-link"
                                                                           href="{{ path('app_producten_index') }}">Producten</a>/Betaling
                </h2>

                <form>

                    <div style="margin-top: 20px" class="custom-container row ">
                        <form action="{{ path('app_landingspage_betalen') }}" method="post" ></form>
                        <div class="col-md-6 payment-summary">
                            <div class="bg-white p-5 rounded border">
                                <h3 style="margin-bottom: 40px !important;" class="font-weight-normal mb-4">
                                    Betaaloverzicht</h3>

                                <table class="table table-hover text-align-center">
                                    <thead>
                                    <tr>
                                        <th class="sum-first-child">Product</th>
                                        <th>Quantiteit</th>
                                        <th>Prijs</th>
                                    </tr>
                                    </thead>
                                    <tr>
                                        <td class="sum-first-child">Event</td>
                                        <td>2</td>
                                        <td>€ 78.98,-</td>
                                    </tr>
                                    <tr>
                                        <td class="sum-first-child">Event 2</td>
                                        <td>1</td>
                                        <td>€ 34.99,-</td>
                                    </tr>
                                    <tfoot>
                                    <tr>
                                        <td></td>
                                        <td style="text-align: right"><b>Totaal:</b></td>
                                        <td style="color: black"><b>€ 113.97,-</b></td>
                                    </tr>
                                    </tfoot>
                                </table>

                                <div class="form-group mb-6">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox">
                                            I agree to the <a href="#">Terms of Use</a> &amp;
                                            <a
                                                href="#">Privacy Policy</a>. Your
                                            business listing is fully backed by our 100% money back guarantee.
                                        </label>
                                    </div>
                                </div>

                                <div class="text-align-center">
                                
                                    <button type="submit" formmethod="post"
                                            class="btn btn-primary">Afrekenen</button> 
                                </div>

                            </div>
                        </div>

                        <div class="col-md-6 payment-form">
                            <div class="bg-white p-5 rounded border">
                                <h3 class="font-weight-normal mb-4">Uw gegevens</h3>
                                
                                <h3 class="h4 font-weight-normal mb-4 mt-7">Order gegeven</h3>

                                <div class="row">

                                    <div class="form-group col-md-12">
                                        <label for="inputtext"><b>Opmerkingen (zo als pli)</b></label>
                                        <input type="text" class="form-control" id="remarks" name=""remarks"" placeholder="">
                                    </div>
                                </div>

                                <h3 class="h4 font-weight-normal mb-4 mt-7">Persoonsgegevens</h3>

                                <div class="row">

                                    <div class="form-group col-md-4">
                                        <label for="inputtext">Voornaam(en)*</label>
                                        <input type="text" class="form-control" id="inputtext" placeholder="">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="inputtext">Tussenvoegsel</label>
                                        <input type="text" class="form-control" id="inputtext" placeholder="">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="inputText">Achternaam*</label>
                                        <input type="text" class="form-control" id="inputText" placeholder="">
                                    </div>
                                </div>

                                <div class="row">

                                    <div class="form-group col-md-6">
                                        <label for="inputtext">Straat*</label>
                                        <input type="text" class="form-control" id="inputtext" placeholder="">
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="inputtext">Huisnummer*</label>
                                        <input type="text" class="form-control" id="inputtext" placeholder="">
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="inputtext">Toevoeging</label>
                                        <input type="text" class="form-control" id="inputtext" placeholder="">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label for="inputtext">Postcode*</label>
                                        <input type="text" class="form-control" id="inputtext" placeholder="">
                                    </div>
                                    <div class="form-group col-md-8">
                                        <label for="inputtext">Plaats*</label>
                                        <input type="text" class="form-control" id="inputtext" placeholder="">
                                    </div>
                                </div>

                                <h3 class="h4 font-weight-normal mb-4 mt-7">Contactgegevens</h3>

                                <div class="row">

                                    <div class="form-group col-md-12 mb-12">
                                        <label for="inputAddress">E-mail*</label>
                                        <input type="email" class="form-control" id="inputAddress" placeholder="">
                                    </div>
                                </div>

                                <div class="row">

                                    <div class="form-group col-md-12 mb-8">
                                        <label for="inputtext">Telefoonnummer</label>
                                        <input type="tel" class="form-control" id="inputPhone" placeholder="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    {% endblock %}


