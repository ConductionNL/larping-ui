<section class="py-7 py-md-10 bg-light ">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">

                <div class="card">
                    <div class="bg-primary text-center py-4">
                        <h2 class="text-white mb-0 h4">Members Log In</h2>
                    </div>
                    <div class="card-body px-7 pt-7 pb-0">
                        <form action="{{ path('app_user_login') }}" method="post">
                            <div class="form-group mb-7">
                                <label for="exampleInputText">User Name*</label>
                                <input type="text" class="form-control" aria-describedby="emailHelp" id="username"
                                       name="username">
                                <em>Enter your Foundation username.</em>
                            </div>
                            <div class="form-group mb-7">
                                <label for="exampleInputPassword1">Password*</label>
                                <input type="password" class="form-control" id="password" name="password">
                                <em>Enter the password that accompanies your username.</em>
                            </div>
                            <div class="form-group d-flex justify-content-between align-items-center mb-7">
                                <a href="{{ path('app_default_index') }}">
                                    <button type="" class="btn btn-outline-primary text-uppercase">
                                        Log in
                                    </button>
                                </a>
                                <a href="{{ path('app_user_reminder') }}">Forgot Password?</a>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </form>
                    </div>
                    <div class="card-footer bg-transparent text-center py-3">
                        <p class="mb-0">Not a member yet? <a href="{{ path('app_user_register') }}" class="link">Sign
                                up</a></p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
