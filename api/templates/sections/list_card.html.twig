<section class="pt-7 pt-md-10">
  <div class="container">
    <div class="section-title">
		 {% if title is defined %}<h2>{{ title|capitalize|trans }}</h2>{% endif %}
		 {% if description is defined %}<p>{{ description|capitalize|trans }}</p>{% endif %}
    </div>
    <div class="row justify-content-center">

     {% for item in items %}
      <div class="col-md-6 col-lg-4">
        <div class="card rounded-0 card-hover-overlay">
          <div class="position-relative">
            <img class="card-img rounded-0" src="../img/listing/listing-4.jpg" alt="Card image cap">
            <div class="card-img-overlay">
              <ul class="list-inline list-inline-rating">
                <li class="list-inline-item">
                  <i class="fa fa-star" aria-hidden="true"></i>
                </li>
                <li class="list-inline-item">
                  <i class="fa fa-star" aria-hidden="true"></i>
                </li>
                <li class="list-inline-item">
                  <i class="fa fa-star" aria-hidden="true"></i>
                </li>
                <li class="list-inline-item">
                  <i class="fa fa-star" aria-hidden="true"></i>
                </li>
                <li class="list-inline-item">
                  <i class="fa fa-star-o" aria-hidden="true"></i>
                </li>
              </ul>
              <h3>
                <a href="{% if view is defined %}{{ path(view, {id: item.id}) }}{% else %}#{% endif %}">
                  {{ item.name }} <i class="fa fa-check-circle" aria-hidden="true"></i>
                </a>
              </h3>
              <p class="text-white">215 Terry Lane, New York</p>
            </div>
          </div>

          <div class="card-footer bg-transparent">
            <ul class="list-unstyled d-flex mb-0 py-2">
              <li>
                <button class="btn-like px-2" data-toggle="tooltip" data-placement="top" title="Favourite this listing">
                  <i class="fa fa-heart-o text-primary" aria-hidden="true"></i>
                  <span>8 k</span>
                </button>
              </li>
              <li class="ml-auto">
                {% if items == organizations %} Organization {% endif %}
              </li>
            </ul>
          </div>
        </div>
      </div>
      {% endfor %}

    </div>
    {% if readmore is defined   %}
    <div class="text-center pt-5">
      <a href="{{ path(readmore) }}" class="btn btn-primary">Explore More</a>
    </div>
   {% endif %}
  </div>
</section>
