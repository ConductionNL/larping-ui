<section class="py-7 py-md-10 bg-light
        <div class="mt-7 mb-5" >
          <h3 class="font-weight-normal mb-4"> Leave Comment </h3>
          <form class="mb-9" action="#">
            <div class="form-row mb-2">
              <div class="form-group col-lg-6">
                <input type="text" class="form-control" id="review-name" placeholder="Enter Your Name">
              </div>
              <div class="form-group col-lg-6">
                <input type="email" class="form-control" id="review-email" placeholder="Enter Your Email">
              </div>
            </div>
            <div class="form-group mb-6">
              <textarea class="form-control" rows="6" placeholder="Enter Your Comment"></textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary"> Submit </button>
            </div>
          </form>

        </div>
