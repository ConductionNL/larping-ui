<!-- HEADER -->
<header class="header">
    <nav class="nav-menuzord navbar-sticky">
        <div class="container clearfix">
            <div id="menuzord" class="menuzord menuzord-responsive">

                <a href="{{ path('app_default_index') }}" class="menuzord-brand">
                    {#                    <h1>{{ common_ground_service.getApplication.name }}</h1>#}
                </a>

                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}

                    {% include 'widgets/menu_user.html.twig' %}

                {% else %}

                    <div class="float-right btn-wrapper mb-5">

                        <a class="btn btn-outline-primary" href="{{ path('app_user_login' ) }}">+
                            <span>Login or Join</span></a>

                    </div>

                {% endif %}

                <ul class="menuzord-menu menuzord-right">

                    {% if  common_ground_service.getApplication.defaultConfiguration is defined and common_ground_service.getApplication.defaultConfiguration.configuration.larpingUi %}

                        {% set menu = commonground_resource(common_ground_service.getApplication.defaultConfiguration.configuration.larpingUi.menuPrimary) %}

                        {% for item in menu.menuItems %}

                            <li class="{% if app.request.attributes.get('_route') == item.href %}active{% endif %}">
                                <a href="{{ path( item.href ) }}">{{ item.name }}</a>
                            </li>

                        {% endfor %}

                    {% endif %}

                </ul>

                <!-- the alert box -->
                {% if app.session.flashbag.peekAll|length > 0 %}
                    {% set datadelay = 0 %}
                    {% for type, messages in app.session.flashbag.all %}
                        {% for message in messages %}

                            <div class="animated bounceDownIn" data-delay="3000">
                                <div class="alert alert-{{ type }} mt-5 animated bounceOutUp" role="alert">
                                    {{ message|trans({}, domain|default('messages')) }}
                                </div>
                            </div>

                        {% endfor %}
                    {% endfor %}
                {% endif %}
                <!-- end of the alert box -->


            </div>
        </div>
    </nav>
</header>

